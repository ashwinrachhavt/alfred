APP_ENV=dev
SECRET_KEY=dev
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=sqlite:///./apps/alfred/alfred.db
PYTHONDONTWRITEBYTECODE=1

# MongoDB connection (optional)
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=alfred
MONGO_APP_NAME=alfred

# Firecrawl + company research
FIRECRAWL_BASE_URL=http://localhost:8010
FIRECRAWL_TIMEOUT=30
COMPANY_RESEARCH_MODEL=gpt-5.1
COMPANY_RESEARCH_COLLECTION=company_research_reports 

AIRTABLE_API_KEY=
CALENDAR_SLOT_DURATION_MINUTES=30
CALENDAR_WORKING_HOURS_START=9
CALENDAR_WORKING_HOURS_END=18
CALENDAR_ORGANIZER_EMAIL=

# Qdrant (cloud) optional
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=alfred_docs

# OpenAI (required for embeddings/LLM)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Writer (browser extension)
# Set to your preferred chat model. If you have access to gpt-5.2, use that.
ALFRED_WRITER_MODEL=gpt-5.2
ALFRED_WRITER_TEMPERATURE=0.4
ALFRED_WRITER_VOICE_K=6
ALFRED_WRITER_VOICE_CHAR_BUDGET=2000
# Redis semantic caching requires Redis Stack (RediSearch + vectors).
ALFRED_WRITER_SEMANTIC_CACHE=true
ALFRED_WRITER_CACHE_THRESHOLD=0.2
# Optional: Postgres-backed LangGraph checkpointing for thread continuity.
# psycopg DSN format (NOT sqlalchemy "postgresql+psycopg://").
ALFRED_WRITER_CHECKPOINT_DSN=
# Optional: simple shared-secret for local browser extensions.
ALFRED_EXTENSION_TOKEN=

# Notion (optional)
NOTION_TOKEN=
NOTION_PARENT_PAGE_ID=
NOTION_CLIENTS_DB_ID=
NOTION_NOTES_DB_ID=

# Gmail integration (optional)
ENABLE_GMAIL=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_PROJECT_ID=
GOOGLE_SCOPES=["https://www.googleapis.com/auth/gmail.readonly","https://www.googleapis.com/auth/gmail.metadata"]
GCP_PUBSUB_TOPIC=
TOKEN_STORE_DIR=.alfred_data/tokens

# CORS
CORS_ALLOW_ORIGINS=["*"]

# Web search providers (optional)
BRAVE_SEARCH_API_KEY=
EXA_API_KEY=
TAVILY_API_KEY=
YDC_API_KEY=
SEARXNG_HOST=http://localhost:8080
SEARX_HOST=

# LangSearch web search (optional)
LANGSEARCH_API_KEY=
LANGSEARCH_BASE_URL=https://api.langsearch.com/v1/web-search
LANGSEARCH_RERANK_URL=https://api.langsearch.com/v1/semantic-rerank

# OpenWeb Ninja (Glassdoor)
OPENWEB_NINJA_API_KEY=
OPENWEBNINJA_GLASSDOOR_API_KEY=
OPENWEB_NINJA_BASE_URL=https://api.openwebninja.com/realtime-glassdoor-data

# Supabase
SUPABASE_URL=https://<your-project>.supabase.co
SUPABASE_ANON_KEY=<anon-public-key>          # for user-scoped calls (RLS enforced)
SUPABASE_SERVICE_ROLE_KEY=<service-role-key> # for admin tasks (bypass RLS)

# Searxng (for autocomplete web search)
SEARXNG_URL=http://localhost:8080
SEARXNG_TIMEOUT=5
SEARXNG_MAX_RESULTS=5

# Langfuse (observability)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=http://localhost:3030
LANGFUSE_DEBUG=false
LANGFUSE_TRACING_ENABLED=true
