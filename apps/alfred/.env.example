APP_ENV=dev
SECRET_KEY=dev
REDIS_URL=redis://localhost:6379/0

# Qdrant (cloud) optional
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=alfred_docs

# OpenAI (required for embeddings/LLM)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Notion (optional)
NOTION_TOKEN=
NOTION_PARENT_PAGE_ID=
NOTION_CLIENTS_DB_ID=
NOTION_NOTES_DB_ID=

# Gmail integration (optional)
ENABLE_GMAIL=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_PROJECT_ID=
GOOGLE_SCOPES=["https://www.googleapis.com/auth/gmail.readonly","https://www.googleapis.com/auth/gmail.metadata"]
GCP_PUBSUB_TOPIC=
TOKEN_STORE_DIR=.alfred_data/tokens

# CORS
CORS_ALLOW_ORIGINS=["*"]

# Postgres / Supabase
DATABASE_URL=postgresql+asyncpg://postgres:password@host:6543/postgres
DB_SSL_CA_PATH=./certs/supabase-ca.crt
DB_USE_PGBOUNCER=true
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
